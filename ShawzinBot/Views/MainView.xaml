<Window
    x:Class="ShawzinBot.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShawzinBot.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="MainView"
    Width="600"
    Height="550"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    ResizeMode="NoResize"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Button
                x:Name="OpenFile"
                Width="20"
                Height="20"
                Margin="10,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="FolderOpen">
                    <materialDesign:PackIcon.Foreground>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFD69016" />
                            <GradientStop Offset="0.757" Color="#FFD6511E" />
                            <GradientStop Offset="0.807" Color="#FF9B330D" />
                        </LinearGradientBrush>
                    </materialDesign:PackIcon.Foreground>
                </materialDesign:PackIcon>
            </Button>

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Shawzin Bot" />

            <Button
                x:Name="CloseProgram"
                Width="20"
                Height="20"
                Margin="10,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="OnCloseProgram"
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Close">
                    <materialDesign:PackIcon.Foreground>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFD69016" />
                            <GradientStop Offset="0.757" Color="#FFD6511E" />
                            <GradientStop Offset="0.807" Color="#FF9B330D" />
                        </LinearGradientBrush>
                    </materialDesign:PackIcon.Foreground>
                </materialDesign:PackIcon>
            </Button>
            <Button
                x:Name="MinimizeProgram"
                Width="20"
                Height="20"
                Margin="40,5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="OnMinimizeProgram"
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                <materialDesign:PackIcon
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Minus">
                    <materialDesign:PackIcon.Foreground>
                        <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFD69016" />
                            <GradientStop Offset="0.757" Color="#FFD6511E" />
                            <GradientStop Offset="0.807" Color="#FF9B330D" />
                        </LinearGradientBrush>
                    </materialDesign:PackIcon.Foreground>
                </materialDesign:PackIcon>
            </Button>
        </Grid>

        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    x:Name="SongName"
                    Grid.Row="0"
                    Height="60"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    TextWrapping="Wrap" />

                <Ellipse
                    Grid.Row="1"
                    Width="250"
                    Height="250"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    StrokeThickness="1">
                    <Ellipse.Stroke>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFD69016" />
                            <GradientStop Offset="0.757" Color="#FFD6511E" />
                            <GradientStop Offset="0.807" Color="#FF9B330D" />
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#19D69016" />
                            <GradientStop Offset="0.757" Color="#19D6511E" />
                            <GradientStop Offset="0.807" Color="#199B330D" />
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Grid Grid.Row="2" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="CurrentTime"
                        Margin="7,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" />

                    <Slider
                        x:Name="SongSlider"
                        Margin="50,0,50,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Maximum="{Binding Path=MaximumTime}"
                        Orientation="Horizontal">
                        <Slider.Foreground>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FFFFFFFF" />
                                <GradientStop Offset="0.807" Color="#FF8F8F8F" />
                            </LinearGradientBrush>
                        </Slider.Foreground>
                    </Slider>

                    <TextBlock
                        x:Name="TotalTime"
                        Margin="7,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Grid>

                <Grid Grid.Row="3" VerticalAlignment="Center">
                    <Grid Margin="0,30,0,0" VerticalAlignment="Top">
                        <Button
                            x:Name="Previous"
                            Width="20"
                            Height="20"
                            Margin="30,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="SkipPrevious">
                                <materialDesign:PackIcon.Foreground>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#FFD69016" />
                                        <GradientStop Offset="0.757" Color="#FFD6511E" />
                                        <GradientStop Offset="0.807" Color="#FF9B330D" />
                                    </LinearGradientBrush>
                                </materialDesign:PackIcon.Foreground>
                            </materialDesign:PackIcon>
                        </Button>

                        <Button
                            x:Name="PlayPause"
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="#FFD6511E"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <Button.Effect>
                                <DropShadowEffect
                                    BlurRadius="15"
                                    Direction="-90"
                                    RenderingBias="Quality"
                                    ShadowDepth="0"
                                    Color="#FFD6511E" />
                            </Button.Effect>
                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="{Binding Path=PlayPauseIcon}">
                                <materialDesign:PackIcon.Foreground>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#FFD69016" />
                                        <GradientStop Offset="0.757" Color="#FFD6511E" />
                                        <GradientStop Offset="0.807" Color="#FF9B330D" />
                                    </LinearGradientBrush>
                                </materialDesign:PackIcon.Foreground>
                            </materialDesign:PackIcon>
                        </Button>

                        <Button
                            x:Name="Next"
                            Width="20"
                            Height="20"
                            Margin="30,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="SkipNext">
                                <materialDesign:PackIcon.Foreground>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#FFD69016" />
                                        <GradientStop Offset="0.757" Color="#FFD6511E" />
                                        <GradientStop Offset="0.807" Color="#FF9B330D" />
                                    </LinearGradientBrush>
                                </materialDesign:PackIcon.Foreground>
                            </materialDesign:PackIcon>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Background="#44444444">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="MIDI 输入设备" />
                    <StackPanel Margin="5,35,5,5" Orientation="Horizontal">
                        <ComboBox
                            x:Name="MidiInputs"
                            Width="220"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="#FF444444"
                            DisplayMemberPath="DeviceName"
                            SelectedItem="{Binding Path=SelectedMidiInput, Mode=TwoWay}" />
                        <Button
                            x:Name="RefreshDevices"
                            Width="30"
                            Height="30"
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Kind="Reload">
                                <materialDesign:PackIcon.Foreground>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#FFD69016" />
                                        <GradientStop Offset="0.757" Color="#FFD6511E" />
                                        <GradientStop Offset="0.807" Color="#FF9B330D" />
                                    </LinearGradientBrush>
                                </materialDesign:PackIcon.Foreground>
                            </materialDesign:PackIcon>
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="5">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="MIDI 音轨" />
                    <!--ComboBox x:Name="MidiTracks" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,8" Width="240" Height="30" Background="#FF444444" SelectionChanged="MidiTracksSelectionChanged">
        <ComboBox.ItemTemplate>
            <DataTemplate>
                <CheckBox x:Name="MidiTrack" Content="{Binding TrackName}" IsChecked="{Binding IsChecked}"/>
            </DataTemplate>
        </ComboBox.ItemTemplate>
    </ComboBox>-->
                    <ScrollViewer Margin="5,35,5,5" Background="#FF444444">
                        <ItemsControl x:Name="MidiTracks">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        x:Name="MidiTrack"
                                        Content="{Binding TrackName}"
                                        IsChecked="{Binding IsChecked}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <Grid Grid.Row="2" Margin="5">
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="设置" />
                    <StackPanel Margin="5,35,5,5">
                        <TextBlock
                            x:Name="Scale"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="音阶: 五声小调" />
                        <CheckBox
                            x:Name="EnableVibrato"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ClickMode="Press"
                            Content="启用哇音" />
                        <CheckBox
                            x:Name="TransposeNotes"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ClickMode="Press"
                            Content="偏移音符" />
                        <CheckBox
                            x:Name="PlayThroughSpeakers"
                            Margin="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ClickMode="Press"
                            Content="通过扬声器播放 MIDI" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Text="弹奏速度:" />
                            <ComboBox
                                x:Name="MidiSpeeds"
                                Width="180"
                                Margin="20,5,5,5"
                                Padding="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="#FF444444"
                                DisplayMemberPath="SpeedName"
                                SelectedItem="{Binding Path=SelectedMidiSpeed, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Text="游戏:" />
                            <ComboBox
                                x:Name="GameInfo"
                                Width="210"
                                Margin="20,5,5,5"
                                Padding="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="#FF444444"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding Path=GameInfos, Mode=TwoWay}"
                                SelectedItem="{Binding Path=SelectedGameInfo, Mode=TwoWay}" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>

        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Path=VersionString}" />
    </Grid>
</Window>